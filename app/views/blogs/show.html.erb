
<div class="page-header">
  <h1><%= @blog.title %></h1>
</div>

<div id="row">
  <div class="col-sm-12 col-md-12">
    <div id="thumbnail">
      <%= image_tag @blog.image %>
      <div id="caption">
        <p><%= @blog.body %></p>
          <p><a class="btn btn-primary btn-lg" <%= link_to 'Home', root_path %> </a>
            <a class="btn btn-primary btn-lg" <%= link_to 'Edit', edit_blog_path(id: @blog.id) %> </a>
              <a class="btn btn-primary btn-lg"<%= link_to 'Delete', blog_path(@blog), method: 'delete', data: {confirm: 'Are you sure you want to delete this blog post?'}%> </a> </p>
                <p> Published on: <%= @blog.published_on %> </p>
      </div>
    </div>
  </div>
</div>

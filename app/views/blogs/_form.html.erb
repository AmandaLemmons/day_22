
<%= form_for @blog do |b| %>
  <div class="form-group">
    <div class="caption">
    <h3> Title</h3>
      <%= b.text_field :title, class: "form-control" %>

    <h3> Text</h3>
      <%= b.text_area :body, class: "form-control" %>

    <h3> Image URL</h3>
      <%= b.text_area :image, class: "form-control" %>

    <h3> Published On </h3>
  </div>
      <%= b.date_select :published_on, prompt: true %>
      <%= b.submit class: "btn btn-primary"%>
  </div>
<%end%>
